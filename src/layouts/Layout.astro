---
import MainNavigation from "../components/MainNavigation.astro";
---

<!DOCTYPE html>
<html lang="da-DK">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Museumsfonden af 7. december 1966</title>
    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../styles/global.css")}
    />
  </head>
  <body>
    <div class="container sm:mt-0 sm:mx-auto grid grid-cols-12 sm:gap-6">
      <h3
        class="col-span-12 sm:col-span-9 sm:col-start-4 lg:col-start-3 py-6 sm:py-0 sm:mt-6 text-title relative bg-bg"
      >
        Museumsfonden
      </h3>

      <MainNavigation client:load />

      <main
        class="col-span-full sm:col-start-4 sm:col-span-9 lg:col-start-3 lg:col-span-10 space-y-6 mb-20"
      >
        <slot />
      </main>
    </div>
  </body>
</html>
